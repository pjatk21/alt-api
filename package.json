{
  "name": "altapi",
  "version": "1.1.8",
  "description": "",
  "author": "@pjatk21",
  "private": false,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "scrapper": "docker run -d --rm --network host -e ALTAPI_GATEWAY=ws://host.docker.internal:4010/ -e PINO_LEVEL=debug ghcr.io/pjatk21/alt-scrap:main"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.4.3",
    "@nestjs/event-emitter": "^1.1.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/platform-express": "^8.3.1",
    "@nestjs/platform-socket.io": "^8.4.0",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/throttler": "^2.0.1",
    "@nestjs/websockets": "^8.4.0",
    "@ntegral/nestjs-sentry": "^3.0.7",
    "@sendgrid/mail": "^7.6.2",
    "@sentry/node": "^6.19.2",
    "@types/luxon": "^2.0.9",
    "cache-manager": "^3.6.0",
    "chance": "^1.1.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.0",
    "ics": "^2.35.0",
    "jsdom": "^19.0.0",
    "liquidjs": "^9.34.0",
    "lodash": "^4.17.21",
    "luxon": "^2.3.0",
    "mongoose": "^6.2.9",
    "nestjs-redoc": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "socket.io": "^4.4.1",
    "swagger-ui-express": "^4.3.0",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.4.2",
    "@types/cache-manager": "^3.4.2",
    "@types/chance": "^1.1.3",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.180",
    "@types/node": "17",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "minimist": "^1.2.6",
    "prettier": "^2.3.2",
    "socket.io-client": "^4.4.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.14.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=16"
  }
}
